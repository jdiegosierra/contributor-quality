# Environment variables for local testing with @github/local-action
# Copy this file to .env and fill in the values

# Required: GitHub token for API access
INPUT_GITHUB-TOKEN=your_github_token_here

# Optional: Override defaults
INPUT_MINIMUM-SCORE=300
INPUT_MINIMUM-STARS=100
INPUT_ANALYSIS-WINDOW=12
INPUT_TRUSTED-USERS=dependabot[bot],renovate[bot]
INPUT_TRUSTED-ORGS=
INPUT_ON-LOW-SCORE=comment
INPUT_LABEL-NAME=needs-review
INPUT_WEIGHTS={}
INPUT_DRY-RUN=true
INPUT_NEW-ACCOUNT-ACTION=neutral
INPUT_NEW-ACCOUNT-THRESHOLD-DAYS=30

# GitHub Actions event payload (required for local testing)
# Create a file like .github/event.json with PR payload
GITHUB_EVENT_PATH=.github/event.json
GITHUB_EVENT_NAME=pull_request
GITHUB_REPOSITORY=your-org/your-repo

# Job Summary output (optional, for viewing summary locally)
GITHUB_STEP_SUMMARY=.github/step-summary.md
